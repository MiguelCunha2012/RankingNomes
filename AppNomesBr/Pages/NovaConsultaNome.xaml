<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNomesBr.Pages.NovaConsultaNome"
             Title="Meu Ranking">
    <VerticalStackLayout Padding="12" Spacing="10">
        <Label Text="Inserir o nome" VerticalOptions="Center" HorizontalOptions="Center" />
        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto">
            <Entry Placeholder="Pedro|Maria|Ana|Joao" x:Name="TxtNome" Grid.Column="0"/>
            <Picker x:Name="PckSexo"
                    Grid.Column="1"
                    WidthRequest="120"
                    Title="Sexo">
                <Picker.Items>
                    <x:String>M</x:String>
                    <x:String>F</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Pesquisar" x:Name="BtnPesquisar" Grid.Column="2" />
        </Grid>

        <Button Text="Deletar Todos" x:Name="BtnDeleteAll" />

        <CollectionView x:Name="GrdNomesBr" VerticalOptions="FillAndExpand">
            <CollectionView.Header>
                <Grid Padding="5" BackgroundColor="LightBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Nomes" FontSize="18" FontAttributes="Bold" Grid.Column="0" />
                    <Label Text="Sexo" FontSize="18" FontAttributes="Bold" Grid.Column="1" />
                    <Label Text="OcorrÃªncias" FontSize="18" FontAttributes="Bold" Grid.Column="2" />
                    <Label Text="Pos. Ranking" FontSize="18" FontAttributes="Bold" Grid.Column="3" />
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Nome}" FontSize="14" FontAttributes="Bold" Grid.Column="0" />
                        <Label Text="{Binding Sexo}" FontSize="14" Grid.Column="1" />
                        <Label Text="{Binding Frequencia}" FontSize="14" FontAttributes="Bold" Grid.Column="2" />
                        <Label Text="{Binding Ranking}" FontSize="14" FontAttributes="Bold" Grid.Column="3" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>